---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Home" description="Citelines â€” verified citations for online video">
  <div class="hero">
    <p class="tagline">Placeholder: one-line description of what Citelines is.</p>

    <a href="#" class="btn-cta">Get the Plugin</a>

    <div class="secondary">
      <a href="#" class="btn-secondary">Donate</a>

      <form class="subscribe-form" onsubmit="event.preventDefault()">
        <input type="email" placeholder="you@example.com" required />
        <button type="submit" class="btn-secondary">Subscribe</button>
      </form>
    </div>
  </div>

  <style is:global>
    .hero {
      text-align: center;
      padding: 6rem 0;
    }

    .tagline {
      font-size: 1.25rem;
      color: #555;
    }

    .btn-cta {
      display: inline-block;
      margin-top: 2.5rem;
      padding: 0.9rem 2.5rem;
      background: #1a1a1a;
      color: #fff;
      border-radius: 8px;
      text-decoration: none;
      font-size: 1.1rem;
      font-weight: 700;
    }

    .btn-cta:hover {
      background: #333;
    }

    .secondary {
      margin-top: 2.5rem;
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 1.5rem;
    }

    .btn-secondary {
      display: inline-block;
      padding: 0.55rem 1.25rem;
      border: 1px solid #ccc;
      border-radius: 6px;
      background: #fff;
      color: #555;
      text-decoration: none;
      font-size: 0.85rem;
      font-weight: 500;
      cursor: pointer;
    }

    .btn-secondary:hover {
      border-color: #999;
      color: #1a1a1a;
    }

    .subscribe-form {
      display: flex;
      gap: 0.5rem;
    }

    .subscribe-form input {
      padding: 0.55rem 0.75rem;
      border: 1px solid #ccc;
      border-radius: 6px;
      font-size: 0.85rem;
      width: 200px;
    }

    .subscribe-form input:focus {
      outline: none;
      border-color: #999;
    }
  </style>
</Layout>
